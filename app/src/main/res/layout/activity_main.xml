<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">



    <LinearLayout
        android:id="@+id/whitePlayerLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="230dp"
        android:orientation="horizontal">
    <EditText
        android:id="@+id/etPlayerOne"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:hint="White player"
        android:textSize="19sp" />

       <ImageView
           android:layout_width="40dp"
           android:layout_height="40dp"
           android:layout_marginLeft="6dp"
           android:src="@drawable/player_white"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/spinnerOneLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/whitePlayerLayout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp">
    <Spinner
        android:id="@+id/spinnerOne"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
         />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Minutes"
            android:paddingLeft="2dp"/>

    </LinearLayout>


    <LinearLayout
        android:id="@+id/blackPlayerLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/spinnerOneLayout"
        android:layout_marginTop="40dp"
        android:layout_centerHorizontal="true">

        <EditText
            android:id="@+id/etPlayerTwo"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_centerHorizontal="true"
            android:hint="Black player"
            android:textSize="19sp" />

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="6dp"
            android:src="@drawable/player_black"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/blackPlayerLayout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp">

        <Spinner
            android:id="@+id/spinnerTwo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/etPlayerTwo"
            android:layout_centerHorizontal="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="2dp"
            android:text="Minutes" />

    </LinearLayout>

    <Button
        android:id="@+id/buttonStart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="100dp"
        android:backgroundTint="@color/white"
        android:text="Start"
        android:textColor="@color/black" />


</RelativeLayout>